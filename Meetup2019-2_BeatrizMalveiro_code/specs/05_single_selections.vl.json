{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
    "data": { "url": "data/starwars.csv"},
    "transform": [{ 
      "filter": {
        "field": "mass",
        "lt": 800
      }
    }],
    "selection": {
      "picked": {
        "type": "multi",
        "on": "mouseover"
      }
    },
    "mark": "circle",
    "encoding": {
      "x": { 
        "field": "mass",
        "type": "quantitative"
      },
      "y": {
        "field": "height",
        "type": "quantitative"
      },
      "tooltip": {
        "field": "name",
        "type": "nominal"
      },
      "color": {
        "condition": {
          "selection": "picked",
          "value": "steelblue"
        },
        "value": "grey"
      }
    }
    
  }
  